@using found.Data.Models
@model Users
<div class="container mt-5">

    <div class="row">
        <div class="col">
        </div>

        <div class="col">
            <h1 class="text-center mt-4 text-blue">Регистрация</h1>
            <div class="reg-custom-div mt-4">
                <div class="container-fluid text-center mt-2">
                    <div class="row">


                        <form method="post" asp-controller="Users" asp-action="Register">

                            <div class="form-group">
                                <label asp-for="login" class="text-center text-white mt-2"><strong>Логин</strong></label>
                                <input asp-for="login" placeholder="Имя, отображающееся другим пользователям" class="form-control mt-2 corner-radius-15px">
                                <span asp-validation-for="login" class="text-danger field-validation-valid" data-valmsg-for="Input.Email" data-valmsg-replace="true"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="mail" class="text-center text-white mt-2"><strong>Email</strong></label>
                                <input asp-for="mail" class="form-control mt-2 corner-radius-15px" placeholder="name@example.com" type="email">
                                <span asp-validation-for="mail" class="text-danger field-validation-valid"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label asp-for="password" class="text-center text-white mt-2"><strong>Пароль</strong></label>
                                <input asp-for="password" class="form-control mt-2 corner-radius-15px" placeholder="Минимум 6 символов" type="password">
                                <span asp-validation-for="password" class="text-danger field-validation-valid"></span>
                            </div>
                            <div class="form-group mt-2">
                                <label class="text-center text-white mt-2"><strong>Повторите пароль</strong></label>
                                <input class="form-control mt-2 corner-radius-15px" type="password" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password">
                                <span class="text-danger field-validation-valid" data-valmsg-for="Input.ConfirmPassword" data-valmsg-replace="true"></span>
                            </div>
                            <input class="btn btn-outline-light corner-radius-15px mt-4" type="submit" value="Подтвердить" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
</div>